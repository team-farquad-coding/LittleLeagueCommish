<form method="post" action="/signup">  
  <form>
    <div class="form-row">
      <div class="col">
        <input type="text" id="first_name" name="first_name" class="form-control" placeholder="First name">
      </div>
      <div class="col">
        <input type="text" id="last_name" name="last_name" class="form-control" placeholder="Last name">
      </div>
    </div>
  </form>
  
  <form>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Parent Email</label>
        <input type="email" class="form-control" id="inputEmail4" name="email" placeholder="Email">
      </div>
      <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Parent Username</label>
        <input type="email" class="form-control" id="inputEmail4" name="username" placeholder="Username">
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">Parent Password</label>
        <input type="password" class="form-control" id="inputPassword4" name="password" placeholder="Password">
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control" id="inputAddress" name="address" placeholder="1234 Main St">
    </div>
    <div class="form-group">
      <label for="phoneNum">Phone Number</label>
      <input type="text" class="form-control" id="phone_number" name="phone_number" placeholder="1234 Main St">
    </div>
    
    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>
</form>