{{!-- Sign up page --}}
<div class="container justufy-content-center m-5 px-5 ">
<form class="mx-5 p-5 rounded " method="post" action="/account" id="signupform"> 
 {{!--row 1  --}}
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="firstname">First Name </label>
        <input type="text" id="firstname" name="firstname" class="form-control" placeholder="First Name" value="{{body.firstname}}" required>
      </div>
      <div class="form-group col-md-6">
        <label for="lastname">Last Name</label>
        <input type="text" id="lastname" name="lastname" class="form-control" placeholder="Last Name" value="{{body.lastname}}" required>
      </div>
    </div>
  {{!-- row 2 --}}
    <div class="form-group">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control" id="inputAddress" placeholder="Street address" name="address" value="{{body.address}}">
    </div>
  {{!-- row 3 --}}
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="inputCity">City</label>
        <input type="text" class="form-control" id="inputCity" name="city" value="{{body.city}}">
      </div>
      <div class="form-group col-md-4">
        <label for="inputState">State</label>
        <input type="text" class="form-control" id="inputState" name="state" value="{{body.state}}">
      </div>
      <div class="form-group col-md-4">
        <label for="inputZip">Zip</label>
        <input type="text" class="form-control" id="inputZip" name="zip" value="{{body.zip}}">
      </div>
    </div>
{{!-- row 4 --}}
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Parent Email</label>
        <input type="email" class="form-control" id="inputEmail4" name="email" placeholder="Email" value="{{body.email}}" required>
      </div>
      <div class="form-group col-md-6">
        <label for="phoneNum">Phone Number</label>
        <input type="text" class="form-control" id="phone_number" name="phone_number" placeholder="" value="{{body.phone_number}}" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Parent Username</label>
        {{#if body}}<span id="duplicateusername">***User Name Already Exists***</span>{{/if}}
        <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">Parent Password</label>
        <input type="password" class="form-control" id="inputPassword4" name="password" placeholder="Password" required>
      </div>
    </div>
    <div class="form-row ">
      <button type="submit" class="btn btn-primary mx-auto">Sign Up</button>
    </div>
  </form>
</div>