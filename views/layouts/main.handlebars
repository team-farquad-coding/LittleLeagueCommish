<body>

  <h1 id="title" >Little League Commissioner</h1>

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mt-0">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
      aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <!--Home Link-->
      <button class="btn btn-outline-secondary mr-3 "> <a href="/" class="text-secondary">Home</a>
      </button>
      <!--Team Link-->
      <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle mr-3" role="button" id="dropdownMenuLink" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">Teams</button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          {{#each teams}}
          <a class="dropdown-item" href="/team/{{team_name}}">{{team_name}}</a>
          {{/each}}
        </div>
      </div>
      <!--League Link-->
      <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle mr-3" role="button" id="dropdownMenuLink" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">Leagues</button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          {{#each leagues}}
          <a class="dropdown-item" href="/league/{{name}}">{{name}}</a>
          {{/each}}
        </div>
      </div>
      <!--About Link-->
      <button class="btn btn-outline-secondary  mr-3"> <a href="/about" class="text-secondary" >About</a></button>
      </div>
      <div>
      <!--Login Link-->
      <button class="btn btn-outline-secondary text-secondary mr-3"> <a href="/login" class="text-secondary">Login</a></button>
      <!--Sign Up Link-->
      <button class="btn btn-outline-secondary mr-3"> <a href="/signup" class="text-secondary">Sign Up</a></button>
      <!--Admin Access Link-->
      <button class="btn btn-outline-secondary mr-3"> <a href="/admin" class="text-secondary">Admin</a></button>
      </div>
     
  </nav>

  <!--placeholder, the content from the other pages is inserted here-->
  
